[global]
    ### Display ###
    monitor = 0
    follow = mouse
    
    ### Geometry ###
    width = (300, 600)
    height = 500
    origin = top-right
    offset = 30x50
    scale = 0
    notification_limit = 0
    
    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 14
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 400
    progress_bar_corner_radius = 7
    
    ### Visual ###
    transparency = 10
    horizontal_padding = 20
    vertical_alignment = top
    text_icon_padding = 20
    frame_width = 2
    frame_color = "#7aa2f7"
    gap_size = 10
    separator_height = 1
    padding = 20
    corner_radius = 15
    separator_color = auto
    
    ### Text ###
    font = JetBrainsMono Nerd Font Medium 11
    line_height = 4
    markup = full
    format = "<span size='large' weight='bold'>%s</span>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes
    word_wrap = yes
    
    ### Icons ###
    enable_recursive_icon_lookup = true
    icon_theme = "Papirus-Dark,Adwaita"
    icon_position = left
    min_icon_size = 48
    max_icon_size = 64
    icon_path = /usr/share/icons/Papirus-Dark/48x48/status/:/usr/share/icons/Papirus-Dark/48x48/devices/:/usr/share/icons/Papirus-Dark/48x48/apps/:/usr/share/pixmaps/
    
    ### History ###
    sticky_history = yes
    history_length = 100
    
    ### Misc ###
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    force_xinerama = false
    force_xwayland = false
    ignore_dbusclose = false
    
    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = context, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#1a1b26ee"
    foreground = "#a9b1d6"
    frame_color = "#565f89"
    highlight = "#7aa2f7"
    timeout = 8
    icon = info

[urgency_normal]
    background = "#1a1b26ee"
    foreground = "#c0caf5"
    frame_color = "#7aa2f7"
    highlight = "#7dcfff"
    timeout = 10
    icon = dialog-information

[urgency_critical]
    background = "#1a1b26ee"
    foreground = "#f7768e"
    frame_color = "#f7768e"
    highlight = "#ff9e64"
    timeout = 0
    icon = dialog-error
    default_icon = dialog-error

# Smart rules for specific applications
[spotify]
    appname = Spotify
    format = "<b>%s</b>\n%b"
    new_icon = spotify
    timeout = 5

[discord]
    appname = discord
    format = "<b>Discord</b>\n%s\n%b"
    new_icon = discord
    timeout = 10

[volume]
    summary = "*Volume*"
    format = "<b>%s</b>"
    history_ignore = yes
    timeout = 2

[brightness]
    summary = "*Brightness*"
    format = "<b>%s</b>"
    history_ignore = yes
    timeout = 2

[screenshot]
    appname = flameshot
    format = "<b>Screenshot</b>\n%s"
    new_icon = camera-photo
    timeout = 3

[notify-send]
    appname = notify-send
    format = "<b>%s</b>\n%b"
    
# Make notifications from some apps more prominent
[important]
    appname = "Thunderbird|Evolution|Slack|Teams"
    urgency = critical
    timeout = 0
