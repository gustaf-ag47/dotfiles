#!/bin/sh

if [ -z "$1" ]; then
	url="$(wl-paste)"
else
	url="$1"
fi

case "$url" in
*mkv | *webm | *mp4 | *youtube.com/watch* | *youtube.com/playlist* | *youtube.com/v/* | *youtube.com/shorts* | *youtu.be* | *hooktube.com* | *bitchute.com* | *videos.lukesmith.xyz* | *odysee.com*)
	setsid -f mpv -quiet "$url" >/dev/null 2>&1
	;;
*png | *jpg | *jpe | *jpeg | *gif | *webp)
	curl -sL "$url" >"/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && nsxiv -a "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" >/dev/null 2>&1 &
	;;
*pdf | *cbz | *cbr)
	curl -sL "$url" >"/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && zathura "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" >/dev/null 2>&1 &
	;;
*mp3 | *flac | *opus | *mp3?source*)
	qndl "$url" 'curl -LO' >/dev/null 2>&1
	;;
*)
	if [ -f "$url" ]; then
		setsid -f "$TERMINAL" -e "$EDITOR" "$url" >/dev/null 2>&1
	else
		setsid -f "$DOTFILES/bin/browser-launcher" "$url" >/dev/null 2>&1
	fi
	;;
esac
